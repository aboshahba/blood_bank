<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        </style>

    <style name="login_cycle_edit_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="login_cycle_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="user_cycle_button">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/edit_text_hint_color</item>
    </style>

    <style name="fragment_aut_edit_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:ems">10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/edit_text_hint_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>

    </style>
</resources>
