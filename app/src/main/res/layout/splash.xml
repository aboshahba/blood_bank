<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_background_color">

    <ImageView
        android:id="@+id/splashscreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/splash"
        app:layout_constraintBottom_toTopOf="@id/splashscreen_imageView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        android:translationY="-100dp"
        app:layout_constraintTop_toBottomOf="@id/splashscreen_imageView_1" />

    <ImageView
        android:id="@+id/splashscreen_imageView_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationX="-16dp"
        android:translationY="-16dp"
        android:scaleType="fitXY"
        android:src="@drawable/splash_screen_logo_1"
        app:layout_constraintBottom_toTopOf="@+id/splashscreen"
        app:layout_constraintEnd_toEndOf="@+id/splashscreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <ImageView
        android:id="@+id/splashscreen_imageView_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/splash_screen_logo_2"
        android:translationX="14dp"
        android:translationY="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splashscreen" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="بنك الدم "
        android:textAlignment="center"
        android:textColor="@color/edit_text_hint_color"
        android:textSize="@dimen/_30sdp"
        android:textStyle="italic"
        android:translationY="-80dp"
        app:layout_constraintBottom_toTopOf="@+id/splashscreen_imageView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashscreen"
        app:layout_constraintVertical_bias="0.37" />


</androidx.constraintlayout.widget.ConstraintLayout>